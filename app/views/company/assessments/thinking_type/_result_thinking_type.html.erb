                                        <%= image_tag "student/student_brain_result_04.jpg", class: "img-fluid  d-block", alt: "Responsive image" %>
                                    </div>
                                    <div class="col-12 col-md-8 col-lg-8 mt-3">
                                        <span><%= t('company_assessment.thinking.result.title_7') %></span>
                                        <p class = "text-indent"><%= t('company_assessment.thinking.result.paragraph_tx1_for_title_7') %></p>
                                        <p class = "text-indent"><%= t('company_assessment.thinking.result.paragraph_tx2_for_title_7') %></p>
                                        <span><%= t('company_assessment.thinking.result.title_8') %></span>
                                        <p class = "text-indent"><%= t('company_assessment.thinking.result.paragraph_tx1_for_title_8') %></p>
                                        <p class = "text-indent"><%= t('company_assessment.thinking.result.paragraph_tx2_for_title_8') %></p>
                                        <p class = "my-2 font-weight-bold text-danger"><%= t('company_assessment.thinking.result.paragraph_tx3_for_title_8') %></p> 
                                    </div>
                                </div>
                            </div>
                            <%# chart part%>
                            <div>
                                <h5 class="std-border-color sub-title font-weight-bold px-2 ">
