                                        <span><%= t('company_assessment.thinking.result.title_6') %></span>
                                        <p class = "text-indent"><%= t('company_assessment.thinking.result.paragraph_tx1_for_title_6') %></p>
                                        <p class = "text-indent"><%= t('company_assessment.thinking.result.paragraph_tx2_for_title_6') %></p>
                                        <p class = "my-2 font-weight-bold text-danger"><%= t('company_assessment.thinking.result.paragraph_tx3_for_title_6') %></p> 
                                    </div>
                                </div>
                            </div>
                            <%# Part D %>
