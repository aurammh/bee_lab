                                        <%= image_tag "student/student_brain_result_03.jpg", class: "img-fluid  d-block", alt: "Responsive image"%>
                                    </div>
                                    <div class="col-12 col-md-8 col-lg-8 mt-3">
                                        <span><%= t('company_assessment.thinking.result.title_5') %></span>
