<button type="button" class="col-12 std-bg-color custom-btn px-3 py-2 text-decoration-none text-white" data-toggle="modal" data-target="#about-behavioral-modal">
<%= t('student_assessment.behavioral.about.popup_about_title')%>
</button>

<!-- Modal -->
<div class="modal fade pl-0" id="about-behavioral-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content ">
            <div class="modal-header std-bg-color text-white">
            <h3 class="modal-title" id="exampleModalLongTitle"><%= t('student_assessment.behavioral.about.popup_about_title')%></h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
            <div class="modal-body assessment_popup">
                <%= image_tag "student/behavioral.jpg", class: "img-fluid potential-img", alt: "Responsive image" %>   
                <section>
                    <div class="d-flex justify-content-center align-items-center"></div>
                    <div>
                        <p class="text-justify mt-2"><%= t('student_assessment.behavioral.about.summary_text')%></p>
                    </div>
                </section>
                <section class="behaviour">
                    <div class="text-left pt-1">
                        <h5 class="text-dark font-weight-bold pl-1 std-border-color">
                            <%= t('student_assessment.behavioral.about.title_1')%>
                        </h5>
                        <p class="text-indent"><%= t('student_assessment.behavioral.about.text_title_1')%><br><span class='ml-5'><%= t('student_assessment.behavioral.about.text_1')%></span></p>
                        <p class="text-indent"><%= t('student_assessment.behavioral.about.text_title_2')%><br><span class='ml-5'><%= t('student_assessment.behavioral.about.text_2')%></span></p>
                        <p class="text-indent"><%= t('student_assessment.behavioral.about.text_title_3')%><br><span class='ml-5'><%= t('student_assessment.behavioral.about.text_3')%></span></p>
                        <p class="text-indent"><%= t('student_assessment.behavioral.about.text_4')%></p>
                    </div>
                </section>
            </div>
            <div class="modal-footer">
                <button type="button" class="custom-btn px-3 py-2 text-decoration-none text-white" data-dismiss="modal"><%= t('common.close')%></button>
            </div>
        </div>
    </div>
</div>