<button type="button" class="col-12 custom-btn px-4 py-2 text-decoration-none text-white" data-toggle="modal" data-target="#about-brain-modal"><%= t('student_assessment.brain.about.btn')%></button>  

<!-- Modal -->
<div class="modal fade pl-0" id="about-brain-modal" tabindex="-1" role="dialog" aria-labelledby="about-brain-modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
        <div class="modal-content">
         <div class="modal-header std-bg-color text-white">
        <h3 class="modal-title" id="exampleModalLongTitle"><%= t('student_assessment.brain.about.modal_title')%></h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
            <div class="modal-body">
                <%= image_tag "student/student_brain_cover.jpg", class: "img-fluid potential-img", alt: "Responsive image" %>   
                <div class="assessment_popup">
                    <div class="form-card bg-white mt-1 mb-2 py-1 px-2">
                        <div class="text-justify mt-lg-2 mt-sm-4">
                            <p class = "text-indent"><%= t('student_assessment.brain.about.paragraph1')%></p>
                            <p class = "text-indent"><%= t('student_assessment.brain.about.paragraph2')%></p>
                            <p class = "text-indent"><%= t('student_assessment.brain.about.paragraph3')%></p>
                            <p class = "text-indent"><%= t('student_assessment.brain.about.paragraph4')%></p>
                        </div>
                        <div class="border-box text-justify p-3">
                            <p><%= t('student_assessment.brain.about.border_box_title') %></p>
                            <p class="text-indent"><%= t('student_assessment.brain.about.border_box_paragraph1') %></p>
                            <p><%= t('student_assessment.brain.about.border_box_paragraph2') %></p>
                            <%= image_tag "student/student_brain_about.jpg", class: "img-fluid px-0 my-3 col-12", alt: "Responsive image" %>   
                        </div>    
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="custom-btn px-4 py-2 text-decoration-none text-white" data-dismiss="modal"><%= t('common.close')%></button>
            </div>
        </div>
    </div>
</div>