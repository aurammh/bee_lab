                                <% Student::Assessment.solid_and_planned_thinkings.each_with_index do |(k, v), index| %>
                                
                                        <tr class="row">
                                            <td class="col-12 col-md-2 col-lg-2"><%= t ('student.assessment.brain_table1_th1') %>   <%= index + 11 %></td>
                                            <td class="col-12 col-md-4 col-lg-4"><%= t("student_assessment.solid_and_planned_thinkings.#{k}") %></td>
                                            <td class="col-12 col-md-2 col-lg-2">
                                                <%= f.radio_button "#{k}",1, { :checked => @student_assessment.solid_and_planned.nil? ? false : @student_assessment.solid_and_planned[v-1] == 1 } %>
                                                <label for=<%= "student_assessment_solid_and_planned_#{k}_1"%> > <%= t ('student.assessment.brain_table1_th3') %>  </label>
                                            </td>
                                            <td class="col-12 col-md-2 col-lg-2">    
                                                <%= f.radio_button "#{k}",2, { :checked =>@student_assessment.solid_and_planned.nil?  ? false : @student_assessment.solid_and_planned[v-1] == 2 }%>
                                                <label for=<%= "student_assessment_solid_and_planned_#{k}_2"%> > <%= t ('student.assessment.brain_table1_th4') %>  </label>
                                            </td>
