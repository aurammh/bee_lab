<%= form_with(model: @student_assessment , id: "brain-form") do |form| %>

<section class="student-quiz student-assessment container-fluid d-flex flex-column align-items-center pt-5">    
    <%# A: logical_and_rational %>         
    <div class="col-11 bg-white p-2 p-md-5 shadow assess-info-box mb-3">
        <div class="row px-4 d-flex mb-3 mt-3">
            <div class="assessment-title"><%=t('student.assessment.diagnosis_input_title')%><br><hr class="title-hr"></div>
        </div>
        <div class="row student-registration px-1">
            <div class="col-12 col-md-12">
                <div class="row">
                 <div class="col-12 pb-4">
                        <span class='font-weight-bold text-danger'>
                            <%=t('student.assessment.brain_title_1')%><br>
                        </span>
                         <span class='font-weight-bold'>
                            <%=t('student.assessment.brain_title_2')%>
                        </span>
                    </div>
                    <div class="col-12 mb-3">
                        <table class="table">                       
                        <tbody class= "brain-table">
                            <%= form.fields_for :logical_and_rational  do |f| %>   
                                <% Student::Assessment.logical_and_rational_thinkings.each_with_index do |(k, v), index| %>
                                        <tr class="row">
                                            <td class="col-12 col-md-2 col-lg-2"><%= t ('student.assessment.brain_table1_th1') %>   <%= index + 1 %></td>
                                            <td class="col-12 col-md-4 col-lg-4"><%= t("student_assessment.logical_and_rational_thinking.#{k}") %></td>
                                            <td class="col-12 col-md-2 col-lg-2">
                                                <%= f.radio_button "#{k}",1, { :checked =>@student_assessment.logical_and_rational.nil?  ? false : @student_assessment.logical_and_rational[v-1] == 1 } %>
                                                <label for=<%= "student_assessment_logical_and_rational_#{k}_1"%> ><%= t ('student.assessment.brain_table1_th3') %> </label>
                                            </td>
                                            <td class="col-12 col-md-2 col-lg-2">    
                                                <%= f.radio_button "#{k}",2, { :checked =>@student_assessment.logical_and_rational.nil?  ? false : @student_assessment.logical_and_rational[v-1] == 2 }%>
                                                <label for=<%= "student_assessment_logical_and_rational_#{k}_2"%> > <%= t ('student.assessment.brain_table1_th4') %> </label>
                                            </td>
                                            <td class="col-12 col-md-2 col-lg-2">
                                                <%= f.radio_button "#{k}",3, { :checked =>@student_assessment.logical_and_rational.nil?  ? false : @student_assessment.logical_and_rational[v-1] == 3 }%>
                                                <label for=<%= "student_assessment_logical_and_rational_#{k}_3"%> > <%= t ('student.assessment.brain_table1_th5') %>  </label>
                                            </td>
                                        </tr>
                                <% end %>
                            <%end%>
                        </tbody>
                        </table>
                    </div>  
                </div>                   
            </div>
            
        </div>  
    </div>

    <%# B: solid_and_planned %>
    <div class="col-11 bg-white p-2 p-md-5 shadow assess-info-box mb-3">
        <div class="row student-registration px-1">
            <div class="col-12 col-md-12">
