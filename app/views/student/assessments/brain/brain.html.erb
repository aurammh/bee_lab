                                                <%= f.radio_button "#{k}",3, { :checked =>@student_assessment.solid_and_planned.nil?  ? false : @student_assessment.solid_and_planned[v-1] == 3 }%>
                                                <label for=<%= "student_assessment_solid_and_planned_#{k}_3"%> ><%= t ('student.assessment.brain_table1_th5') %>  </label>
                                            </td>
                                        </tr>
                                <% end %>
                            <%end%>
                        </tbody>
                        </table>
                    </div>  
                </div> 
            </div> 
        </div>      
    </div>

    <%# C: sensory_and_friendly %>
