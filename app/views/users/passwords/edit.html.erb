<div class="container p-3 p-sm-5">
  <div class="row justify-content-center my-5 p-2">
    <div class="col-12 col-xl-8">
      <div class="card login-card-shadow bg-white p-3 p-sm-5">
        <div class="text-group-left mb-4">          
            <h3 class="text-center"><%= t('password_setting.edit_password') %></h3>
            <% if @user_type.eql?"2"%>   
              <hr class="std-grandient-hr">   
            <% else %>     
              <hr class="com-grandient-hr">   
            <% end %>            
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
           <%= f.hidden_field :reset_password_token %>     

            <div class="mb-3">
              <div class="d-flex">
                  <%= f.label :password, class: "form-label" %>
                  <label class="ml-auto required-label"><%= t('common.require') %> </label>
              </div>
              <%= f.password_field :password, class: "form-control shadow-none errors" %>
              <p class="ms-invalid-feedback"><%= resource.errors.full_messages_for(:password)[0] %></p>
            </div>  



            <div class="mb-4">
              <div class="d-flex">
                  <%= f.label :password_confirmation, class: "form-label" %>
                  <label class="ml-auto required-label"><%= t('common.require') %> </label>
              </div>
              <%= f.password_field :password_confirmation, class: "form-control shadow-none errors" %>
              <p class="ms-invalid-feedback"><%= resource.errors.full_messages_for(:password_confirmation)[0] %></p>
            </div>
           
          <% if @user_type.eql?"2"%>  
            <div class="d-flex justify-content-end">
              <%= f.submit "パスワードを変更する", class: "custom-btn text-white w-50 std-bg-color p-1 col-12 col-sm-6" %>  
            </div>             
          <% else %>    
            <div class="d-flex justify-content-end">
              <%= f.submit "パスワードを変更する", class: "custom-btn text-white w-50 com-bg-color p-1 col-12 col-sm-6" %>  
            </div> 
          <% end %>  
          
          <div class="d-flex flex-column mt-4">
            <%= link_to "ログイン!", new_password_path(resource_name, user_type: @user_type), class: "mb-3 text-secondary text-decoration-none" %>
            <%= link_to "会員登録（無料）", new_user_registration_path(resource_name, user_type: @user_type), class: "text-secondary text-decoration-none" %>
          </div>
      <% end %>
      </div>
   </div>
  </div> 
</div>
